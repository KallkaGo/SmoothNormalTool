{
  "name": "smoothnormaltool",
  "private": true,
  "version": "0.0.0",
  "author": "Kallka",
  "version": "1.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "all": " npm-run-all -p dev electron",
    "electron-build": "electron-builder"
  },
  "build": {
    "appId": "com.kallka.app",
    "productName": "KallkaTool",
    "directories": {
      "output": "build"
    },
    "win": {
      "icon": "public/firefly.ico",
      "artifactName": "${productName}.${ext}",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "files": [
      "dist/**/*",
      "*.js"
    ],
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "main": "app.js",
  "devDependencies": {
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "jquery": "^3.7.1",
    "npm-run-all": "^4.1.5",
    "three": "^0.165.0",
    "vite": "^5.3.1"
  }
}